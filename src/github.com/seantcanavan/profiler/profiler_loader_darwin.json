{
    "CPU and Disk Utilization": "iostat 1 10",
    "Memory Utilization": "top -l 1 -s 0 | grep PhysMem",
    "Disk Free Space": "df -h",
    "Process List": "ps -Al",
    "Uptime": "uptime",
    "Kernel Version": "uname -r",
    "Distro Version": "system_profiler SPSoftwareDataType",
    "Routing Table": "netstat -r",
    "Network Interfaces": "netstat -i",
    "Occupied Ports": "sudo lsof -i -n -P | grep TCP",
    "Network Usage Stats": "netstat -s",
    "Active Connections": "netstat -va"
}
